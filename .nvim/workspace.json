{ 
    "folders": [
        {
            "name": "lazy",
            "path": "$VIM_DATA_PATH/lazy",
            "modules": [
                "nvim-lspconfig"
            ]
        },
        {
            "name": "local-config",
            "path": "$VIM_CONFIG_PATH"
        },
        {
            "name": "vscodews",
            "path": "$VIM_DATA_PATH/lazy/vscode-like-workspace.nvim"
        }
    ],
    "settings": {
        "files.exclude": {
            "**/node_modules": true,
            "**/.git": true
        },
        "neovim": {
            "editor": {
                "tabsize": 2,
                "shiftwidth": 2,
                "softtabstop": 2,
                "expandtab": true,
                "spell": true

            },
            "language_editor": {
                "java": {
                    "tabsize": 4,
                    "shiftwidth": 4,
                    "softtabstop": 4,
                    "expandtab": true
                },
                "lua": {
                    "tabsize": 2,
                    "shiftwidth": 2,
                    "softtabstop": 2,
                    "expandtab": true
                },
                "json": {
                    "tabsize": 4,
                    "shiftwidth": 4,
                    "softtabstop": 4,
                    "expandtab": true
                }
            },
            "keymaps": {
                "workspace.save": "<leader>ws",
                "workspace.reload": "<leader>wr"
            },
            "enabled_plugins": [
                "telescope.nvim",
                "nvim-tree.lua"
            ]
        }
    }
}
