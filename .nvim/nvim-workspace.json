{ "folders": [
    {
        "name": "lazy",
        "path": "$HOME/.local/share/nvim/lazy/",
        "modules": [
            "nvim-lspconfig"
        ]
    },
    {
        "name": "local-config",
        "path": "$HOME/taowang/.config/nvim/"
    },
    {
        "name": "vscodews",
        "path": "$HOME/.local/share/nvim/lazy/vscodews.nvim/"
    }
 ],
  "settings": {
    "editor.insertSpaces": true,
    "files.exclude": {
      "**/node_modules": true,
      "**/.git": true
    },
    "editor.tabSize": 4,
    "neovim": {
      "keymaps": {
        "workspace.save": "<leader>ws",
        "workspace.reload": "<leader>wr"
      },
      "enabled_plugins": [
        "telescope.nvim",
        "nvim-tree.lua"
      ]
    }
  }
}
